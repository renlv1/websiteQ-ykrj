.commonBanner
  padding-top 1.2rem
  width: 100%
  min-height 6rem
  background: linear-gradient(160deg,#BBBD7C,#66A397);
  .wrapper
    min-height: 6rem
    padding-left .82rem
    padding-right .5rem
    margin: 0 auto
    display flex
    justify-content space-between
    align-items center
    @media screen and (max-width: 768px)
      width: 100%;
      flex-direction: column;
      padding-top 50px
      padding-bottom 20px
      align-items: center;
  .banner-left
    @media screen and (max-width: 768px)
      width: 100%
      text-align: center
      margin-top: 20px
    .banner-bigtitle
      color #fff
      font-size: .4rem
      line-height: 1.5
      animation: feadInUp 1s both;
      @media screen and (max-width: 768px)
        font-size: 26px
    .title-desc
      width: 5.68rem
      font-weight: 300
      color #fff
      font-size: .24rem
      line-height: 1.5
      margin: .45rem 0 .38rem
      animation: feadInUp2 1s both;
      @media screen and (max-width: 768px)
        width: 100%
        font-size: 18px
    .btn
      font-weight: 300
      color #fff
      cursor pointer
      width: 3rem
      height: .68rem
      border: 1px solid rgba(255,255,255,.2)
      text-align: center
      line-height: .68rem
      border-radius .34rem
      font-size: .18rem
      animation: feadInUp2 1s both;
      @media screen and (max-width: 768px)
        margin: 1rem auto;
        width: 200px;
        height: 50px;
        line-height: 50px;
        font-size: 14px;
        border-radius: 25px;
      .btn-des
        margin: 0 10px
  .banner-right
    @media screen and (max-width: 768px)
      margin: 20px 0
      width: 100%
    img
      width: 5.10rem
      height 4.54rem
      @media screen and (max-width: 768px)
        width: 100%
        height auto
